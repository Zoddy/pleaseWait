#orbit
  animation-direction normal
  animation-duration 1.25s
  animation-iteration-count infinite
  animation-name orbit
  animation-play-state inherit
  animation-timing-function linear
  margin 5px auto
  height 20px
  width 20px

  &:before
    background-color fgColor
    border 4px solid fgColor
    border-radius 100%
    box-shadow 0 0 10px lighten(fgColor, 10)
    content ""
    display block
    position relative
    top 4px
    left -8px
    height 3px
    width 3px

  &:after
    background-color fgColor
    border 4px solid fgColor
    border-radius 100%
    box-shadow 0 0 10px lighten(fgColor, 10)
    content ""
    float right
    position relative
    top -7px
    right -8px
    height 3px
    width 3px

@keyframes orbit
  from
    transform rotate(0)
  to
    transform rotate(360deg)